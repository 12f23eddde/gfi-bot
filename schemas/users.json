{
  "bsonType": "object",
  "description": "User statsitics for RecGFI training",
  "required": ["created_at", "updated_at", "user", "repos", "issues", "pulls"],
  "properties": {
    "created_at": {
      "bsonType": "date",
      "description": "The time when this document is added to this collection"
    },
    "updated_at": {
      "bsonType": "date",
      "description": "The last time when this document is updated (to reflect latest statistics)"
    },
    "user": {
      "bsonType": "string",
      "description": "User name on GitHub"
    },
    "repos": {
      "bsonType": "object",
      "description": "Repositories owned by this user",
      "items": {
        "bsonType": "object",
        "description": "Statistics for a single repository",
        "required": ["name", "created_at"],
        "properties": {
          "name": {
            "bsonType": "string",
            "description": "Repository name"
          },
          "created_at": {
            "bsonType": "date",
            "description": "Date of repository creation"
          }
        }
      }
    },
    "issues": {
      "bsonType": "array",
      "description": "Issue created by this user",
      "items": {
        "bsonType": "object",
        "required": ["owner", "name", "number", "created_at"],
        "properties": {
          "owner": {
            "bsonType": "string",
            "description": "Repository owner"
          },
          "name": {
            "bsonType": "string",
            "description": "Repository name"
          },
          "number": {
            "bsonType": "int",
            "description": "Issue number"
          },
          "created_at": {
            "bsonType": "date",
            "description": "Date of issue creation"
          }
        }
      }
    },
    "pulls": {
      "bsonType": "array",
      "description": "Pull requests created by this user",
      "items": {
        "bsonType": "object",
        "required": ["owner", "name", "number", "created_at"],
        "properties": {
          "owner": {
            "bsonType": "string",
            "description": "Repository owner"
          },
          "name": {
            "bsonType": "string",
            "description": "Repository name"
          },
          "number": {
            "bsonType": "int",
            "description": "Pull request number"
          },
          "created_at": {
            "bsonType": "date",
            "description": "Date of pull request creation"
          }
        }
      }
    }
  }
}
